<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.ScrollPane?>
<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="594.0" minWidth="800.0" prefHeight="594.0" prefWidth="652.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">

    <SplitPane fx:id="searchPanes" minHeight="-Infinity" prefHeight="170.0" prefWidth="800.0">

        <AnchorPane fx:id="AnchorPaneTitle" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">

            <Label layoutX="6.0" layoutY="6.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Search by Title Below: " />
            <TextField fx:id="searchFieldTitle" layoutX="6.0" layoutY="28.0" />
            <Button fx:id="searchButtonTitle" layoutX="6.0" layoutY="59.0" onAction="#searchByTitle" text="Search" />
            <CheckBox fx:id="isExactWordTitle" layoutX="178.0" layoutY="31.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="160.0" text="Match Full Word?" />
            <HBox layoutY="100">
                <RadioButton text="Culture"><padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding><toggleGroup><ToggleGroup fx:id="relatedFilter" /></toggleGroup></RadioButton>
                <RadioButton text="Century" toggleGroup="$relatedFilter"><padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding></RadioButton>
                <RadioButton text="Period Style" toggleGroup="$relatedFilter"><padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding></RadioButton>
            </HBox>

        </AnchorPane>

    </SplitPane>

    <Pane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" prefWidth="652.0" scaleShape="false" VBox.vgrow="NEVER">
        <Label layoutX="8.0" layoutY="13.0" text="Search Results:" />
        <Label fx:id="resultCount" layoutX="110.0" layoutY="14.0" text="0">
            <padding>
                <Insets left="1.0" right="1.0" />
            </padding>
        </Label>
    </Pane>

    <ScrollPane hbarPolicy="NEVER" minViewportWidth="500.0" minWidth="100.0" prefHeight="483.0" prefWidth="652.0" VBox.vgrow="ALWAYS">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
        <VBox fx:id="resultBox" />
    </ScrollPane>


</fx:root>
